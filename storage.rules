rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures folder - allow authenticated users to manage their own pictures
    match /profile_pictures/{fileName} {
      // Allow anyone to read profile pictures
      allow read: if true;
      
      // Allow authenticated users to write (upload/update) files
      // The app ensures users can only upload files named {their-uid}.jpg
      allow write: if request.auth != null;
      
      // Allow authenticated users to delete files
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

